<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != 'dataLayer' ? '&l=' + l : '';
        j.async = true;
        j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, 'script', 'dataLayer', 'GTM-5C2QMW6T');
    </script>
    <!-- End Google Tag Manager -->
    <script>
      document.documentElement.classList.add('js');
    </script>
    <title>{{ title | append: '|' | append: site.name | strip | split: '|' | compact | join: ' | ' }}</title>
    <meta name="description" content="{{ description }}">
    <meta name="keywords" content="{{ keywords | concat: site.default.keywords | join: ", " }}">
    <meta name="author" content="{{ site.name }}">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ page.path | prepend: site.origin }}">
    <meta property="og:image" content="{{ image.path | default: site.default.image.path | prepend: site.origin }}">
    <meta property="og:site_name" content="{{ site.name }}">
    <meta property="og:locale" content="ja_JP">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ title }}">
    <meta name="twitter:description" content="{{ description }}">
    <meta name="twitter:url" content="{{ page.path | prepend: site.origin }}">
    <meta name="twitter:image" content="{{ image.path | default: site.default.image.path | prepend: site.origin }}">
    <!-- ファビコン設定 -->
    <link rel="icon" href="/assets/favicon-192.png" onerror="this.href='favicon-192.png';">
    <!-- Preconnect -->
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Fonts -->
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?{{ google.fonts.query | default: site.default.google.fonts.query }}"
      as="style"
    >
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?{{ google.fonts.query | default: site.default.google.fonts.query }}"
    >
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?{{ google.fonts.query | default: site.default.google.fonts.query }}"
      >
    </noscript>
    <!-- LCP image preload -->
    {% assign preload_image_links = links | where: 'rel', 'preload' | where: 'as', 'image' %}
    {% for link in preload_image_links %}
      <link
        rel="{{ link.rel }}"
        as="{{ link.as }}"
        fetchpriority="{{ link.fetchpriority }}"
        href="{{ link.href }}?v={{ site.asset.version }}"
        imagesrcset="{% for src in link.imagesrcset %}{{ src.url }}?v={{ site.asset.version }} {{ src.resolution }}{% unless forloop.last %}, {% endunless %}{% endfor %}"
        imagesizes="{{ link.imagesizes }}"
      >
    {% endfor %}
    <!-- Local CSS -->
    <link rel="preload" href="/index.css?v={{ site.asset.version }}" as="style">
    <link rel="stylesheet" href="/index.css?v={{ site.asset.version }}">
    <!-- Local JS -->
    <script src="/index.js?v={{ site.asset.version }}" defer></script>
  </head>
  <body class="{{ classes | compact | join: " " }}">
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-5C2QMW6T"
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      ></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    <header>
      <a href="{% if id == "creator" %}#{% else %}/{% endif %}">
        <img src="/assets/logo.svg" alt="{{ site.name }} ロゴ" class="logo" width="70" height="50">
      </a>
      <nav class="on-page" aria-label="ページ内ナビゲーション">
        <button class="toggle fas fa-bars text-xl" aria-expanded="false" aria-label="メニューを開く">
          <span class="sr-only">メニュー</span>
        </button>
        <menu>
          {% assign menu = site.default.nav.menu | concat: nav.menu %}
          {% for a in menu %}
            <li>
              <a href="{{ a.anchor }}">{{ a.label }}</a>
            </li>
          {% endfor %}
        </menu>
      </nav>
    </header>
    {{ content }}
    <footer>
      <nav class="on-site" aria-label="サイト内ナビゲーション">
        <menu>
          {% for p in site.pages %}
            {% assign is_current = p.path == page.path %}
            <li>
              <a
                href="{% if is_current %}#{% else %}{{ p.path }}{% endif %}"
                {% if is_current %}
                  aria-current="page"
                {% endif %}
              >
                {{ p.label }}
              </a>
            </li>
          {% endfor %}
        </menu>
      </nav>
      <p class="copyright"><small>&copy; 2025 Flair LLC</small></p>
    </footer>
  </body>
</html>
