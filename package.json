{
  "name": "corporate-site",
  "version": "1.0.0",
  "description": "Flair Corporate Site",
  "private": true,
  "scripts": {
    "build:eleventy": "npx @11ty/eleventy --input=./src/ --output=./public/",
    "build:eleventy:watch": "npx @11ty/eleventy --input=./src/ --output=./public/ --watch",
    "build:tsc": "tsc",
    "build:tsc:watch": "tsc --watch",
    "build:css": "npx @tailwindcss/cli -i ./src/tailwind.css -o ./public/index.css --minify",
    "build:css:watch": "npx @tailwindcss/cli -i ./src/tailwind.css -o ./public/index.css --watch",
    "build": "npm -s run build:eleventy && npm -s run build:tsc && npm -s run build:css",
    "test:lighthouse": "lighthouse ${npm_config_lighthouse_opts}",
    "test:lighthouse-gate": "node ./lighthouse-gate.mjs",
    "test": "npm -s run test:lighthouse ${npm_config_url:-http://127.0.0.1:5002/creator/} | npm -s run test:lighthouse-gate",
    "postinstall": "npm -s run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flair-agency/corporate-site.git"
  },
  "author": "Naoki KIMURA",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/flair-agency/corporate-site/issues"
  },
  "homepage": "https://github.com/flair-agency/corporate-site#readme",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@tailwindcss/cli": "^4.2.0",
    "firebase-tools": "^15.7.0",
    "lighthouse": "^13.0.3",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
