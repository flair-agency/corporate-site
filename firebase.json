{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(css|js|mjs|woff2|woff|ttf|otf|png|jpg|jpeg|webp|avif|svg|ico|json|webm|mp4|wasm)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=31536000,immutable"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=300,must-revalidate"
          }
        ]
      }
    ],
    "redirects": [
      {
        "source": "{,/}",
        "destination": "/creator/",
        "type": 301
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5002
    }
  }
}
